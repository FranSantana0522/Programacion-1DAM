package pack;

import java.util.Scanner;

public class ActividadDeAmpliacion2_11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int numero, unidades, decenas,centenas,milesimas;
		int capicua;
		System.out.println("Introduce un numero entre 0 y 9999:");
		numero=sc.nextInt();
		unidades=numero%10;
		numero=numero/10;
		decenas=numero%10;
		numero=numero/10;
		centenas=numero%10;
		milesimas=numero/10;
		
		if(unidades==milesimas && decenas==centenas) {
			System.out.println("El numero es capicua");
		} else {
			System.out.println("El numero no es capicua");
		}
		
	
		
	}

}
