package pack;

import java.util.Scanner;

public class ActividadDeAmpliacion2_13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int comidaDiaria, numAnimales, kilosPorAnimal;
		float falta;
		System.out.println("Cantidad comida diaria comprada:");
		comidaDiaria=sc.nextInt();
		System.out.println("Numero de animales:");
		numAnimales=sc.nextInt();
		System.out.println("Kilos por animal de comida:");
		kilosPorAnimal=sc.nextInt();
		
		if (kilosPorAnimal<=comidaDiaria && numAnimales>0) {
			
			System.out.println("Pueden comer");
			
		}else if (kilosPorAnimal>comidaDiaria){
			falta=(float)comidaDiaria/numAnimales;
			System.out.println("Se reparte:" + falta + "kilos");
		}
			if (numAnimales == 0) {
				System.out.println("No hay animales en la granja");
			} else if (comidaDiaria ==0) {
				System.out.println("No hay comida en la granja");
			}
		
		
		
		
	}

}
